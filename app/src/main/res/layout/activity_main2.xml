<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求网络"/>

    <Button
        android:id="@+id/btn_request2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_request"
        android:text="下载"/>

    <Button
        android:id="@+id/btn_request3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_request2"
        android:text="上传"/>


    <TextView
        android:id="@+id/tv_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_request"
        android:text="123"
        android:textColor="@color/colorAccent"/>


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:layout_below="@+id/tv_main2"
        android:id="@+id/number_progress_bar"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:progress_text_size="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <ImageView
        android:layout_below="@+id/number_progress_bar"
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
